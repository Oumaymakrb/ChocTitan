pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    def dockerImage = 'oumaymaii/app_gitlab_choctitan'
                    def dockerTag = 'latest' 

                   
                    def customImage = docker.build("${dockerImage}:${dockerTag}")

                
                    customImage.withRegistry([credentialsId: 'f06b7ac1-6365-48f4-88ca-e5d97678739a', url: 'https://index.docker.io/v1/']) {
                     
                        customImage.push()
                    }
                }
            }
        }
    }
}
